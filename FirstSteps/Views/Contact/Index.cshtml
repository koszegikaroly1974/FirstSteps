@model IEnumerable<FirstSteps.Models.Contact>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-dark">Kapcsolattartók  listája</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Contact" asp-action="Create" class="btn btn-primary"> Új kapcsolattartó felvitele</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {

        <table class=" table table-bordered table-striped bg-light" style="width:100%">
            <thead>
                <tr>
                    <th>Kapcsolattartó azonosító</th>
                    <th>Kapcsolattartó neve</th>
                    <th>Kapcsolattartó beosztása</th>
                    <th>Kapcsolattartó telefonszáma</th>
                    <th>Kapcsolattartó email címe</th>
                    <th>Megjegyzések</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                <tr>
                    <td width="5%">@item.ContactId</td>
                    <td width="15%">@item.ContactName</td>
                    <td width="15%">@item.ContactStatus</td>
                    <td width="10%">@item.ContactPhone</td>
                    <td width="10%">@item.ContactMail</td>
                    <td width="15%">@item.ContactNotifications</td>
                    <td width="30%">
                        <div class="w-100 btn-group">
                            <a asp-controller="Contact" asp-action="ContactForm" asp-route-ContactId="@item.ContactId" class="btn btn-primary mx-1"> Kapcsolattartó űrlap megnyitása</a>
                        </div>
                    </td>
                </tr>
                }

            </tbody>

        </table>
    }
    else
    {
        <p>A partner adatbázis üres, nincs elérhető adat!</p>
    }

</div>

