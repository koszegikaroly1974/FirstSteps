@model FirstSteps.Models.Partner

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Partner hozzáadása</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="PartnerName"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="PartnerAddress"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="PartnerTaxNumber"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="PartnerNotifications"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="ContactId"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <input asp-for="PartnerName" class="form-control" />
                        <span asp-validation-for="PartnerName" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <input asp-for="PartnerAddress" class="form-control" />
                        <span asp-validation-for="PartnerAddress" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <input asp-for="PartnerTaxNumber" class="form-control" />
                        <span asp-validation-for="PartnerTaxNumber" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="PartnerNotifications" class="form-control" />
                        <span asp-validation-for="PartnerNotifications" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <select asp-for="ContactId" asp-items="@ViewBag.TypeDropDown" class="form-control">
                            <option selected>  -- Válasszon kapcsolattartót! --  </option>
                        </select>
                        <span asp-validation-for="ContactId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Felvitel" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Vissza</a>
                        </div>
                     </div>
                </div>
            </div>
        </div>
    </div>
</form>


